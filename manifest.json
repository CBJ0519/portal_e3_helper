{
  "manifest_version": 3,
  "name": "NYCU E3 Helper",
  "version": "1.8",
  "description": "優化 NYCU E3 使用體驗：作業倒數、成績分析、檔案下載（教材/影片/公告）、AI 智能翻譯與摘要、智能通知徽章等功能",
  "permissions": [
    "storage",
    "downloads",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://e3.nycu.edu.tw/*",
    "https://e3p.nycu.edu.tw/*",
    "http://localhost:11434/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://translate.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jszip.min.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "128.png",
      "48": "128.png",
      "128": "128.png"
    },
    "default_title": "NYCU E3 Helper"
  },
  "icons": {
    "16": "128.png",
    "48": "128.png",
    "128": "128.png"
  }
}
